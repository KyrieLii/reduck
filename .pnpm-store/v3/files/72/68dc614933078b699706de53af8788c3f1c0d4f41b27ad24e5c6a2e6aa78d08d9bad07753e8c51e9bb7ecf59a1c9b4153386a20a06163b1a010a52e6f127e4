    } catch (err) {
      return this.onError(context, err);
    }
  }

  onError(context, err) {
    context.error(_constants.ERROR_DIGEST.EINTER, err);
    this.renderErrorPage(context, 500);
  }

  async renderErrorPage(context, status) {
